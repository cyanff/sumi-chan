{
  "manifest_version": 3,
  "name": "hackathon",
  "description": "extension",
  "version": "0.0.1",
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "action": {
    "default_title": "hackathon"   
  },
   "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "https://api.anthropic.com/*/*"
  ],

  "options_ui": {
    "page": "./options.html"
  },

  "web_accessible_resources": [
    {
      "resources": [ "app.tsx", "main.js", "ghost.png"],
      "matches": [ "<all_urls>" ]
    } 
  ]
}

